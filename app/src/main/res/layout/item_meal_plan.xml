<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/pnl_add_food_horizontal_main"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    app:cardElevation="3dp"
                                    app:cardUseCompatPadding="true"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="6dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

        <TextView
                android:id="@+id/item_meal_txt_food_name"
                style="@style/TextViewStyle"/>

        <TextView
                android:id="@+id/item_meal_txt_quantity"
                style="@style/TextViewStyle"/>

        <TextView
                android:id="@+id/item_meal_txt_food_carbs"
                style="@style/TextViewStyle"/>

    </LinearLayout>


    <RelativeLayout
            android:id="@+id/pnl_add_favourites"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:orientation="vertical"
            android:padding="2dp">

        <ImageButton
                android:id="@+id/btn_delete_item_from_meal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:tint="@color/colorBackground"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_clicked"/>

        <ImageButton
                android:id="@+id/btn_add_favourites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fav_empty"
                android:tint="@color/colorBackground"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_clicked"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>