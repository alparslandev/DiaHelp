<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">

                    <solid android:color="@color/my_divider"/>
                    <corners android:radius="5dp"/>

                    <padding
                            android:left="4dp"
                            android:top="4dp"
                            android:bottom="4dp"
                            android:right="4dp"/>
                </shape>
            </item>

            <item android:drawable="@drawable/ic_dropdown_up" android:gravity="right|center_vertical"
                  android:right="5dp"
                  android:bottom="15dp" android:left="150dp" android:top="15dp"/>

        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">

                    <solid android:color="#d8d8d8"/>
                    <corners android:radius="5dp"/>

                </shape>
            </item>

            <item android:bottom="4dp" android:top="1dp" android:left="1dp" android:right="1dp">
                <shape>
                    <gradient
                            android:angle="90"
                            android:endColor="@android:color/white"
                            android:startColor="@android:color/white"
                            android:type="linear"/>
                    <stroke
                            android:width="1dp"
                            android:color="#fff"/>
                    <corners android:radius="3dp"/>
                    <padding
                            android:left="4dp"
                            android:top="4dp"
                            android:bottom="4dp"
                            android:right="4dp"/>
                </shape>
            </item>

            <item android:drawable="@drawable/ic_dropdown" android:gravity="right|center_vertical" android:right="5dp"
                  android:bottom="15dp" android:left="150dp" android:top="15dp"/>

        </layer-list>
    </item>

</selector>